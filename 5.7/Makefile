# Build a container via the command "make build"
# By Jason Gegere <jason@htmlgraphic.com>

VERSION = 5.7.18
NAME = mysql
IMAGE_REPO = htmlgraphic

IMAGE_NAME = $(IMAGE_REPO)/$(NAME):$(VERSION)
DOMAIN = htmlgraphic.com

all:: help


help:
	@echo ""
	@echo "-- Help Menu"
	@echo ""
	@echo "     make build        - Build the $(NAME) image"
	@echo "     make push         - Push $(IMAGE_NAME) to public docker repo"
	@echo "     make run          - Create a data container for $(NAME) and run $(NAME)"
	@echo "     make start        - Start the EXISTING $(NAME) container"
	@echo "     make stop         - Stop $(NAME) container"
	@echo "     make restart      - Stop and start $(NAME) container"
	@echo "     make rm           - Stop and remove $(NAME) container"
	@echo "     make state        - View state $(NAME) container"
	@echo "     make logs         - View logs in real time"

build:
	docker build \
	    --build-arg VCS_REF=`git rev-parse --short HEAD` \
        --build-arg BUILD_DATE=`date -u +"%Y-%m-%dT%H:%M:%SZ"` \
        --rm -t $(IMAGE_NAME) .

push:
	@echo "note: If the repository is set as an automatted build you will NOT be able to push"
	docker push $(IMAGE_NAME)

run:
	@echo "Creating data container for $(NAME)..."
	docker run --name db-data -v /var/lib/mysql busybox /bin/sh
	@echo "Run $(NAME)..."
	docker run -d --restart=always -p 3306:3306 --volumes-from db-data --name $(NAME) $(IMAGE_NAME)

start:
	@echo "Starting $(NAME)..."
	docker start $(NAME) > /dev/null

stop:
	@echo "Stopping $(NAME)..."
	docker stop $(NAME) > /dev/null

restart: stop start

rm: stop
	@echo "Removing $(NAME)..."
	docker rm $(NAME) > /dev/null

state:
	docker ps -a | grep $(NAME)

logs:
	@echo "Build $(NAME)..."
	docker logs -f $(NAME)
